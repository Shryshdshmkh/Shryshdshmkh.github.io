        // Error Comparison Chart
        const errorCtx = document.getElementById('errorChart').getContext('2d');
        const errorChart = new Chart(errorCtx, {
            type: 'bar',
            data: {
                labels: ['IDW', 'Nearest Neighbor', 'Natural Neighbor', 'RBF', 'TIN', 'Spline'],
                datasets: [{
                    label: 'RMSE (standardized)',
                    data: [1.1, 1.3, 0.9, 0.8, 1.2, 0.7],
                    backgroundColor: [
                        'rgba(59, 130, 246, 0.7)',
                        'rgba(139, 92, 246, 0.7)',
                        'rgba(20, 184, 166, 0.7)',
                        'rgba(234, 88, 12, 0.7)',
                        'rgba(220, 38, 38, 0.7)',
                        'rgba(99, 102, 241, 0.7)'
                    ],
                    borderColor: [
                        'rgba(59, 130, 246, 1)',
                        'rgba(139, 92, 246, 1)',
                        'rgba(20, 184, 166, 1)',
                        'rgba(234, 88, 12, 1)',
                        'rgba(220, 38, 38, 1)',
                        'rgba(99, 102, 241, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    title: {
                        display: true,
                        text: 'Comparative RMSE Across Methods (Lower is Better)',
                        font: {
                            size: 16
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return `RMSE: ${context.raw.toFixed(2)}σ`;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Standardized RMSE'
                        }
                    }
                }
            }
        });

        // Parameter Sensitivity Chart
        const paramCtx = document.getElementById('paramChart').getContext('2d');
        const paramChart = new Chart(paramCtx, {
            type: 'line',
            data: {
                labels: Array.from({length: 10}, (_, i) => i+1),
                datasets: [
                    {
                        label: 'IDW (Power Parameter)',
                        data: [1.4, 1.2, 1.1, 1.0, 0.95, 0.93, 0.95, 0.98, 1.02, 1.05],
                        borderColor: 'rgba(59, 130, 246, 1)',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        tension: 0.3,
                        fill: true
                    },
                    {
                        label: 'RBF (Smoothing Parameter)',
                        data: [1.5, 1.3, 1.1, 0.9, 0.8, 0.75, 0.78, 0.82, 0.85, 0.88],
                        borderColor: 'rgba(234, 88, 12, 1)',
                        backgroundColor: 'rgba(234, 88, 12, 0.1)',
                        tension: 0.3,
                        fill: true
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    title: {
                        display: true,
                        text: 'Parameter Sensitivity on RMSE',
                        font: {
                            size: 16
                        }
                    },
                    tooltip: {
                        callbacks: {

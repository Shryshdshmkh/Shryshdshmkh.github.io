                        }
                    }
                }
            }
        });

        // Computation Time Chart
        const timeCtx = document.getElementById('timeChart').getContext('2d');
        const timeChart = new Chart(timeCtx, {
            type: 'radar',
            data: {
                labels: ['100 pts', '1,000 pts', '10,000 pts', '100,000 pts'],
                datasets: [
                    {
                        label: 'IDW',
                        data: [1, 5, 50, 500],
                        backgroundColor: 'rgba(59, 130, 246, 0.2)',
                        borderColor: 'rgba(59, 130, 246, 1)',
                        pointBackgroundColor: 'rgba(59, 130, 246, 1)',
                        pointRadius: 4
                    },
                    {
                        label: 'Natural Neighbor',
                        data: [5, 50, 500, 5000],
                        backgroundColor: 'rgba(20, 184, 166, 0.2)',
                        borderColor: 'rgba(20, 184, 166, 1)',
                        pointBackgroundColor: 'rgba(20, 184, 166, 1)',
                        pointRadius: 4
                    },
                    {
                        label: 'RBF',
                        data: [10, 100, 1000, 10000],
                        backgroundColor: 'rgba(234, 88, 12, 0.2)',
                        borderColor: 'rgba(234, 88, 12, 1)',
                        pointBackgroundColor: 'rgba(234, 88, 12, 1)',
                        pointRadius: 4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    title: {
                        display: true,
                        text: 'Computation Time Scaling (Relative Units)',
                        font: {
                            size: 16
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return `${context.dataset.label}: ${context.raw} units`;
                            }
                        }
                    }
                },
                scales: {
                    r: {
                        angleLines: {
                            display: true
                        },
                        suggestedMin: 0,
                        ticks: {
                            display: false
                        }
                    }
                }
            }
        });

        // Add tooltip functionality
        function setupChartHover(chart, tooltipId) {
            const tooltip = document.getElementById(tooltipId);
            const canvas = chart.canvas;
            
            canvas.addEventListener('mousemove', (e) => {
                const activePoints = chart.getElementsAtEventForMode(
                    e, 'nearest', { intersect: true }, false
                );
                
                if (activePoints.length > 0) {
                    const point = activePoints[0];
                    const dataset = chart.data.datasets[point.datasetIndex];
                    const value = dataset.data[point.index];
                    const label = chart.data.labels[point.index];
                    
                    tooltip.innerHTML = `<strong>${dataset.label}</strong><br>${label}: ${value.toFixed(2)}`;
                    tooltip.style.opacity = 1;
                    tooltip.style.left = `${e.offsetX + 10}px`;
                    tooltip.style.top = `${e.offsetY}px`;
                } else {
                    tooltip.style.opacity = 0;
                }
            });
            
            canvas.addEventListener('mouseout', () => {
                tooltip.style.opacity = 0;
            });
        }

        setupChartHover(errorChart, 'errorTooltip');
        setupChartHover(paramChart, 'paramTooltip');
        setupChartHover(timeChart, 'timeTooltip');
    </script>

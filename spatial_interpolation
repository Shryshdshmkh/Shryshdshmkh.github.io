                                return `${context.dataset.label}: ${context.raw.toFixed(2)}σ`;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Standardized RMSE'
                        }
                    },
                    x: {
                        title: {
                            display: true,
